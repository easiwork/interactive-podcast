{
  "name": "interactive-podcast-app",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "copy": "cp -r dist/* /var/www/hackercast.club/",
    "build-and-copy": "bun run build && bun run copy",
    "lint": "eslint .",
    "preview": "vite preview",
    "server:dev": "NODE_ENV=development bun --watch src/server/server.ts",
    "server:prod": "bun src/server/server.ts",
    "dev:all": "concurrently --names web,server \"bun run dev\" \"bun run server:dev\""
  },
  "dependencies": {
    "@11labs/client": "^0.0.5",
    "@extractus/article-extractor": "^8.0.16",
    "@google-cloud/text-to-speech": "^5.8.0",
    "@mui/material": "^6.4.1",
    "@radix-ui/react-collapsible": "^1.1.2",
    "@radix-ui/react-slider": "^1.2.4",
    "@radix-ui/react-slot": "^1.2.0",
    "@tailwindcss/postcss": "^4.1.3",
    "@tailwindcss/vite": "^4.1.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "elevenlabs": "^1.50.4",
    "google-auth-library": "^9.15.1",
    "lucide-react": "^0.487.0",
    "prettier": "^3.4.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tailwind-merge": "^3.2.0",
    "tailwindcss-animate": "^1.0.7",
    "tw-animate-css": "^1.2.5",
    "uuid": "^11.0.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/node": "^22.10.7",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@vitejs/plugin-react-swc": "^3.5.0",
    "autoprefixer": "^10.4.20",
    "cors": "^2.8.5",
    "eslint": "^9.17.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.16",
    "express": "^4.21.2",
    "globals": "^15.14.0",
    "postcss": "^8.5.1",
    "tailwindcss": "^4.1.3",
    "typescript": "~5.6.2",
    "typescript-eslint": "^8.18.2",
    "vite": "^6.0.5"
  }
}
